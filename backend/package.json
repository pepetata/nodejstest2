{
  "name": "restaurant-backend",
  "version": "1.0.0",
  "description": "Backend server for restaurant ordering system",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "cross-env LOG_LEVEL=INFO nodemon server.js --env development",
    "start:test": "nodemon server.js --env test",
    "test": "jest --runInBand --config jest.config.json",
    "test:watch": "jest --runInBand --config jest.config.json --watch",
    "test:coverage": "jest --runInBand --config jest.config.json --coverage",
    "seed": "node src/db/seedDatabase.js",
    "seed:dev": "node scripts/setup-database.js --env development --seed-only",
    "seed:test": "node scripts/setup-database.js --env test --seed-only",
    "seed:prod": "node scripts/setup-database.js --env production --seed-only",
    "db:setup": "node scripts/setup-database.js --migrations-only",
    "db:setup:dev": "node scripts/setup-database.js --env development --migrations-only",
    "db:setup:test": "node scripts/setup-database.js --env test --migrations-only",
    "db:setup:prod": "node scripts/setup-database.js --env production --migrations-only",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^2.1.0",
    "isomorphic-dompurify": "^2.25.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.5",
    "pg": "^8.11.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3"
  }
}
